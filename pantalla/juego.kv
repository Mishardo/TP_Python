<JuegoVisual>:
    name: "juego"

    FloatLayout:
        id: juego_area

        #Puntaje
        Label:
            id: puntaje_label
            text: "0"
            font_size: "40sp"
            bold: True
            size_hint: None, None
            size: self.texture_size
            pos: root.width - self.width - 10, root.height - self.height - 10

        #Personaje
        Jugador:
            id: player
            size_hint: None, None
            size: 50, 50
            pos: root.width * 0.3, root.height * 0.5
